private void OnGridCellChanged(object sender, EventArgs e) {
    var currentRowIndex = gwGrid.Items.IndexOf(gwGrid.CurrentItem);
    if (currentRowIndex < 0) currentRowIndex = 0;
    tbLog.AppendText($"{currentRowIndex} {gwTable[currentRowIndex].code}\n");
    gvCurCode = gwTable[currentRowIndex].code;

    plotDay.Plot.Clear();
    plotDay.Plot.AddSignal(gwDB[gvCurCode]["pcD"].ToArray());
    plotDay.Refresh();

    plotMin.Plot.Clear();
    plotMin.Plot.AddSignal(gwDB[gvCurCode]["pcM"].ToArray());
    plotMin.Refresh();
}

private void OnLogTextChanged(object sender, TextChangedEventArgs e) {
    tbLog.ScrollToEnd();
}


public class GridRow {
    // public int no { get; set; } = 0;
    public string code { get; set; } = "-";
    public string name { get; set; } = "-";
    public string sect { get; set; } = "-";     // Hold, Gwan, Ref

    public int pYst { get; set; } = 0;
    public string act { get; set; } = "-";
}
